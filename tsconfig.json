{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "es5",
    "module": "esnext",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "removeComments": true,
    "declaration": false,
    "sourceMap": true,
    "jsx": "react-jsx",
    "typeRoots": [
      "index.d.ts",
      "node_modules/@types"
    ],
    "esModuleInterop": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
      "es2021"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true
  },
  "include": [
    "./src/lib**/*.tsx",
    "./src/lib/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
